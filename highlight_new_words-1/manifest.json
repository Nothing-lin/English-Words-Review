{
  "manifest_version": 2,
  "name": "highlight_new_words",
  "version": "1.0",
  "description": "highlight the youdao direct new words",
  "background": {
    "scripts": [
       "content_scripts/jquery-3.3.1.js", "popup/popup.js","content_scripts/highlight.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icons/16.png",
      "32": "images/icons/32.png",
      "48": "images/icons/48.png",
      "64": "images/icons/64.png",
      "128": "images/icons/128.png"
    }
  },
  "icons": {
    "16": "images/icons/16.png",
    "32": "images/icons/32.png",
    "48": "images/icons/48.png",
    "64": "images/icons/64.png",
    "128": "images/icons/128.png"
  },
  "content_scripts": [{
    "all_frames": true,
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "content_scripts/jquery-3.3.1.js",
      "content_scripts/highlight.js",
      "popup/popup.js"
    ],
    "css": [
      "content_scripts/content_scripts.css"
    ]
  }],
  "permissions": [
    "storage",
    "tts",
    "notifications"
  ]
}
